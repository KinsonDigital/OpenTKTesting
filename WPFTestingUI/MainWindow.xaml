<Window x:Class="WPFTestingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestingUI"
        mc:Ignorable="d" Title="MainWindow" Width="300" Height="300">

    <Border BorderThickness="2" BorderBrush="Orange">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <WindowsFormsHost x:Name="RenderHost" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Height="50" HorizontalAlignment="Center">
                <Button x:Name="PlayButton" Content="Play" Width="100" Height="25" Click="PlayButton_Click" Margin="0, 0, 2.5, 0"/>
                <Button x:Name="PauseButton" Content="Pause" Width="100" Height="25"  Click="PauseButton_Click" Margin="2.5, 0, 0, 0"/>
                <Button x:Name="ReloadButton" Content="Reload" Width="100" Height="25" Click="ReloadButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
