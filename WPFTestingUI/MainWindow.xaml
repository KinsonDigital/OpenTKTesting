<Window x:Class="WPFTestingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestingUI"
        mc:Ignorable="d" Title="MainWindow" Width="300" Height="300">
    
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="StartButton" Content="Start Engine" Width="100" Height="25" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Engine" Width="100" Height="25" Margin="5" Click="StopButton_Click"/>
            <Button x:Name="RestartButton" Content="Restart" Width="100" Height="25" Margin="5" Click="RestartButton_Click"/>
            <Button x:Name="PlayButton" Content="Play Engine" Width="100" Height="25" Margin="5" Click="PlayButton_Click"/>
            <Button x:Name="PauseButton" Content="Pause Engine" Width="100" Height="25" Margin="5" Click="PauseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
